include ../_mixins
section.d-none#contact(data-bind="fadeVisible: state()=='contact'")
  .container-fluid
    nav.nav.d-flex.justify-content-between.align-items-center
      h1.navbar-brand.text-shadow #[+modelIcon('contact')] Contacts
      .nav-item.dropdown(data-bind="visible: Contact.someSelectedContact")
        a.nav-link.dropdown-toggle(href="#" data-bs-toggle="dropdown") #[i.fa.fa-wrench(aria-hidden='true')] Actions
        ul.dropdown-menu
          li: a.dropdown-item(href="#duplicate") Duplicate
          li: a.dropdown-item(data-bind="click: Contact.deleteSelected" href="#delete") Delete
      .nav-item
        button.btn.btn-primary.shadow(data-bs-toggle="modal" data-bs-target="#contactModal" data-bind="click: Contact.newContact") #[i.fa.fa-plus] Add Contact
  .container-fluid
    .table-responsive.table-wrapper.rounded
      table.table-list.table.table-striped.table-hover
        thead
          tr
            th.cursor-pointer(data-bind="click: Contact.deselectAll") #
            th name
            th.text-end: +tableNav()
        tbody(data-bind="foreach: contacts")
          tr
            td.id
              input(type="checkbox" data-bind="checked: selected")
            td.name.w-100(colspan="100%" data-bs-toggle="modal" data-bs-target="#contactModal" data-bind="click: select.bind($parent), text: name")
            //-td.text-end
            //-  button.btn.btn-sm.btn-link(data-bs-toggle="modal" data-bs-target="#contactModal" data-bind="click: select.bind($parent)") edit
include contact_form
