.modal.fade#userModal(tabindex="1")
  .modal-dialog.modal-xl.modal-dialog-scrollable
    .modal-content(data-bind="with: selectedUser")
      .modal-header
        h5.modal-title
          span(data-bind="if: id!=0") User #[span(data-bind="text: name")]
          span(data-bind="if: id==0") New User #[span(data-bind="text: name")]
        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
      .modal-body
        form(action="#")
          .mb-3
            label.col-form-label(for="user-name") Name
            input.form-control#user-name(type="text" data-bind="value: name")
          .mb-3
            label.col-form-label(for="user-email") Email
            input.form-control#user-email(type="email" data-bind="value: email")

      .modal-footer
        button.btn.btn-secondary(data-bind="click: cancel" type="button" data-bs-dismiss="modal") Close
        button.btn.btn-primary(data-bind="click: save" type="button" _data-bs-dismiss="modal") Save changes