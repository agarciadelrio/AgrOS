include ../_mixins
section.d-none#handler(data-bind="fadeVisible: state()=='handler'")
  .container-fluid
    nav.nav.d-flex.justify-content-between.align-items-center
      h1.navbar-brand.text-shadow #[+modelIcon('handler')] Handlers
      .nav-item.dropdown(data-bind="visible: Handler.someSelectedHandler")
        a.nav-link.dropdown-toggle(href="#" data-bs-toggle="dropdown") #[i.fa.fa-wrench(aria-hidden='true')] Actions
        ul.dropdown-menu
          li: a.dropdown-item(href="#duplicate") Duplicate
          li: a.dropdown-item(data-bind="click: Handler.deleteSelected" href="#delete") Delete
      .nav-item
        button.btn.btn-primary.shadow(data-bs-toggle="modal" data-bs-target="#handlerModal" data-bind="click: Handler.newHandler") #[i.fa.fa-plus] Add Handler
  .container-fluid
    .table-responsive.table-wrapper.rounded
      table.table-list.table.table-striped.table-hover
        thead
          tr
            th.cursor-pointer(data-bind="click: Handler.deselectAll") #
            th name
            th code
            th vat
            th.text-end: +tableNav()
        tbody(data-bind="foreach: handlers")
          tr
            td.id
              input(type="checkbox" data-bind="checked: selected")
            td.name.text-primary(data-bs-toggle="modal" data-bs-target="#handlerModal" data-bind="click: select.bind($parent), text: name")
            td.code(data-bind="text: code") code
            td.vat(colspan="100%" data-bind="text: vat") vat
            //-td.text-end
            //-  button.btn.btn-sm.btn-link(data-bs-toggle="modal" data-bs-target="#handlerModal" data-bind="click: select.bind($parent)") edit
include handler_form
